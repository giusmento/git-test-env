{
  "name": "cicd-demo-app",
  "version": "1.0.0",
  "description": "CI/CD Pipeline Demo Application for educational purposes",
  "main": "src/app.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "build": "echo 'Building application...' && mkdir -p dist && cp -r src/* dist/",
    "start": "npx serve src",
    "deploy:staging": "echo 'Deploying to staging environment...'",
    "deploy:production": "echo 'Deploying to production environment...'"
  },
  "keywords": [
    "cicd",
    "demo",
    "git",
    "tutorial",
    "github-actions"
  ],
  "author": "Demo Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
